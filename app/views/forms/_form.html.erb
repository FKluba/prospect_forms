<%= simple_form_for(@form) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :description %>
    </div>

    <h3> Questions </h3>

    <div class="sub-form">
        <div id="questions">
          <%= f.simple_fields_for :questions do |question| %>
              <%= render 'question_fields', :f => question %>
          <% end %>
        </div>
        <div id="add_question" class="sub-form-add">
          Ajouter une question
        </div>

    </div>

    <div class="form-actions">
      <%= link_to 'Retour', forms_path %>
      <div class="float-right"> <%= f.button :submit %> </div>
    </div>
<% end %>
