<% @users.each do |user| %>
  <tr>
    <td><%= user.last_name %></td>
    <td><%= user.first_name %></td>
    <td><%= user.age %></td>
    <td><%= user.tel %></td>
    <td><%= user.email %></td>
    <td><%= user.location %></td>
    <td><%= user.society %></td>
    <td><%= link_to 'Voir', user %></td>
    <td><%= link_to 'Editer', edit_user_path(user) %></td>
    <td><%= link_to 'Supprimer', user, method: :delete %></td>
  </tr>
<% end %>
</table>

